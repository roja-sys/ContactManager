@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Add Contact";
}

<h2 class="page-title">Add New Contact</h2>

<div class="form-container">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="form-label fw-bold"></label>
            <input asp-for="Phone" class="form-control" placeholder="e.g. +977 9800000000" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">✅ Save Contact</button>
            <a asp-action="Index" class="btn btn-secondary">↩ Cancel</a>
        </div>
    </form>
</div>
